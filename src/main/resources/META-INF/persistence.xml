<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa_kiril" >
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>kiril.Person</class>
        <class>inheritance.Car</class>
        <class>inheritance.Bmw</class>
        <class>kiril.GetObjectsFromDB</class>
        <class>kiril.LearnCriteriaQueries</class>
        <class>kiril.EntityManagerTool</class>
        <class>relationship.Unidirectional.AddressUni</class>
        <class>relationship.Unidirectional.StudentUni</class>
        <class>relationship.BiDirectional.AddressBi</class>
        <class>relationship.BiDirectional.StudentBi</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.password" value="root" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/jpa_kiril"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <!--<property name="hibernate.hbm2ddl.auto" value="update"/>-->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.id.new_generator_mappings" value="true" />
        </properties>
    </persistence-unit>

</persistence>